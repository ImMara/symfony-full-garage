{% extends 'base.html.twig' %}

{% block title %} Garage - Home {% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mt-5">Nos derniers mod√©les</h1>
    <hr class="bg-light">
    <div class="last-box row align-items-center justify-content-center">
        {% for car in cars %}
            {% set url = path('cars_show',{'slug':car.slug }) %}
            <div class="col-md-4  mb-2">
                <div class="card border-warning" style="height: 450px">
                    <div class="card-header">{{ car.marque }} <strong class="text-warning">{{ car.modele }}</strong></div>
                    <img src="{{ car.cover }}" class="img-fluid"  alt="{{ car.modele }}">
                    <div class="card-body">
                        <h4 class="card-title">{{ car.modele }}</h4>
                        <p class="card-text">{{ car.description }}</p>
                        <a href="{{ url }}" class="btn btn-danger col-6">Voir plus ...</a>
                        {% if (app.user and app.user == car.author) or is_granted('ROLE_ADMIN') %}
                            <a href="{{ path('car_edit',{'slug': car.slug })}}" class="btn btn-secondary">Modification de l'annonce</a>
                        {% endif %}
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
    <hr class="bg-light">
    <div class="row align-items-center justify-content-center info" id="info">
        <div class="col-md-6 h-100">
            <img class="img-fluid info-img" src="{{ asset('images/man-mechanic-and-woman-customer-look-at-the-car-hood-and-discuss-repairs.jpg') }}" alt="">
        </div>
        <div class="col-md-6 h-100">
            <h1>Notre <strong class="text-danger">garage</strong></h1>
            <p class="mt-3 mb-3 text-justify">{{ about.0.description }}</p>
            <a href="{{ path('catalogue') }}" class="info-btn btn btn-warning">Notre catalogue</a>
        </div>
    </div>
</div>
{% endblock %}
